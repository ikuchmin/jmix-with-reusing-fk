<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://CTableBrowse.caption"
        focusComponent="cTablesTable">
    <data readOnly="true">
        <collection id="cTablesDc"
                    class="com.company.ub_with_double_keys.entity.CTable">
            <fetchPlan extends="_base">
                <property name="ktopl" fetchPlan="_base"/>
                <property name="saknr" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="cTablesDl">
                <query>
                    <![CDATA[select e from CTable e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="cTablesTable" spacing="true">
        <filter id="filter"
                dataLoader="cTablesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="cTablesTable"
                    width="100%"
                    dataContainer="cTablesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="ktopl"/>
                <column id="saknr"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="cTablesTable.create"/>
                <button id="editBtn" action="cTablesTable.edit"/>
                <button id="removeBtn" action="cTablesTable.remove"/>
                <button id="testBtn" caption="Test Btn"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
